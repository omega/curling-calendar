<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <!-- Required meta tags always come first -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
<style>
.navbar + .container {
    margin-top: 2rem;
}
.results td, .results th {
    text-align: right;
}
.results td:first-of-type, .results th:first-of-type {
    text-align: left;
}
.matches th {
    text-align: center;
}
.matches td:first-of-type {
    text-align: right;
}
.matches .points{
    text-align: center;
}
.matches .date td, .matches .date small {
    line-height: 1;
}
.matches .date td  {
    border-top: none;
}
.matches .own-team {
    font-weight: bold;
}

.collapse.in ul {
    display: block;
        clear: both;
}
</style>
    </head>
    <body>
        <nav class="navbar navbar-dark bg-primary navbar-full navbar-expand-lg">
            <a class="navbar-brand" href="<%= url_for('/') %>">Curling-kalendere</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#divisionMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="divisionMenu">
                <ul class="navbar-nav mr-auto">
% foreach (1..3) {
                    <li class="nav-item">
                        <a href="<%= url_for("/OACK/2018/$_") %>" class="nav-link"><%= $_ %>. division</a>
                    </li>
% }
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col">
                    <% my @parts = split(" - ", title); if (scalar(@parts) > 1) { %>
                    <ol class="breadcrumb">
                        <% my @stack; foreach (@parts) { %>
                            <% push(@stack, ($_ =~ m/^(\d)\./ ? "2018/$1" : $_)); %>
                            <% if (scalar(@stack) == scalar(@parts) ) { %>
                                <li class="active breadcrumb-item"><%= $_ %></li>
                            <% } else { %>
                                <li class="breadcrumb-item"><%= link_to $_, url_for('/' . join('/', @stack)) %></li>
                            <% } %>
                        <% } %>
                    </ol>
                    <% } else { %>
                        <h2><%= title %></h2>
                    <% } %>
                    <%= content %>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    </body>
</html>
